# Ollama URL (default: host, use http://ollama:11434 if using Docker porfile)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Local models to download automatically (space or comma separated)
# Local: llama3.2, mistral, qwen2.5, phi3
OLLAMA_MODELS=

# MongoDB connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster_url>.mongodb.net/<database_name>?retryWrites=true&w=majority&appName=Main

# Read-only mode (false = read/write, true = read-only)
MONGODB_READONLY=false

# Cloudflare Tunnel token (optional, for HTTPS)
CLOUDFLARE_TUNNEL_TOKEN=